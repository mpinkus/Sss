@page "/"
@using MudBlazor

<PageTitle>Shamir's Secret Sharing Ceremony</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">
        <MudIcon Icon="Icons.Material.Filled.Security" Class="mr-3" />
        Shamir's Secret Sharing Ceremony
    </MudText>
    
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-8" Color="Color.Secondary">
        Secure, auditable secret sharing for enterprise environments
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <MudText Typo="Typo.h5" GutterBottom="true">
                        <MudIcon Icon="Icons.Material.Filled.Add" Class="mr-2" />
                        Create Secret Shares
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mb-4">
                        Split a sensitive secret into multiple encrypted shares using Shamir's Secret Sharing algorithm. 
                        Configure threshold requirements and distribute shares among trusted keepers.
                    </MudText>
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Primary" 
                               StartIcon="Icons.Material.Filled.Add"
                               Href="/create-shares"
                               FullWidth="true">
                        Start Share Creation
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" md="6">
            <MudCard Elevation="2" Class="pa-4">
                <MudCardContent>
                    <MudText Typo="Typo.h5" GutterBottom="true">
                        <MudIcon Icon="Icons.Material.Filled.Restore" Class="mr-2" />
                        Reconstruct Secret
                    </MudText>
                    <MudText Typo="Typo.body2" Class="mb-4">
                        Recover the original secret by combining the required threshold number of shares. 
                        Cryptographic verification ensures data integrity throughout the process.
                    </MudText>
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Secondary" 
                               StartIcon="Icons.Material.Filled.Restore"
                               Href="/reconstruct-secret"
                               FullWidth="true">
                        Start Reconstruction
                    </MudButton>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12">
            <MudCard Elevation="1" Class="pa-4 mt-4">
                <MudCardContent>
                    <MudText Typo="Typo.h6" GutterBottom="true">
                        <MudIcon Icon="Icons.Material.Filled.Security" Class="mr-2" />
                        Security Features
                    </MudText>
                    <MudGrid>
                        <MudItem xs="12" md="4">
                            <MudText Typo="Typo.subtitle2" GutterBottom="true">
                                <MudIcon Icon="Icons.Material.Filled.Lock" Size="Size.Small" Class="mr-1" />
                                AES-256-GCM Encryption
                            </MudText>
                            <MudText Typo="Typo.body2">
                                Each share is encrypted with military-grade AES-256-GCM encryption using unique keeper passwords.
                            </MudText>
                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudText Typo="Typo.subtitle2" GutterBottom="true">
                                <MudIcon Icon="Icons.Material.Filled.Verified" Size="Size.Small" Class="mr-1" />
                                HMAC Authentication
                            </MudText>
                            <MudText Typo="Typo.body2">
                                Cryptographic signatures ensure data integrity and prevent tampering with share data.
                            </MudText>
                        </MudItem>
                        <MudItem xs="12" md="4">
                            <MudText Typo="Typo.subtitle2" GutterBottom="true">
                                <MudIcon Icon="Icons.Material.Filled.Assignment" Size="Size.Small" Class="mr-1" />
                                Comprehensive Auditing
                            </MudText>
                            <MudText Typo="Typo.body2">
                                Complete audit trails with session tracking and administrator provenance for compliance.
                            </MudText>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12">
            <MudAlert Severity="Severity.Info" Class="mt-4">
                <MudText Typo="Typo.body2">
                    <strong>Enterprise Ready:</strong> This system implements industry-standard cryptographic practices 
                    with PBKDF2 key derivation, secure memory management, and configurable security policies suitable 
                    for enterprise environments requiring high-security secret management.
                </MudText>
            </MudAlert>
        </MudItem>
    </MudGrid>
</MudContainer>
